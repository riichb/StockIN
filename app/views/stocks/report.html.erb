<h1>Stock Information</h1>

<%= flash[:notice] %>

<table>
  <tr>
    <th>Name</th>
    <th>Quantity</th>
  </tr>

<% @stocks.each do |stock| %>
  <tr>
    <td><%=link_to stock.name, stock %></td>
    <td><%= stock.quantity %></td>
  </tr>
<% end %>
</table>

<br />
<br />

<%= link_to 'Add new item', new_stock_path %>