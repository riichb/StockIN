<div class="text-center">
<h1>Bulk Add</h1>
<br/>
<br/>
<%= form_tag add_multiple_stocks_path, :method => :put do %>
	<%= select(:stock, :id, Stock.all.collect {|s| [ s.name, s.id ] }, {prompt: 'Select item name'}) %>
	<%= text_field(:stock, :quantity, :placeholder=>'# new', :size => 5) %>
	<br/>
	<br/>
        <%= submit_tag "Bulk Add", :class => "btn btn-danger" %>
<% end %>
<br/>
<br/>
<br/>
<%= link_to 'Add new item', new_stock_path, :class => "btn btn-info" %>
</div>
